  Dialogs, DB, ADODB, StdCtrls, DataModule, OperacionDM,
  ComCtrls, Buttons, IBX.IBCustomDataSet, IBX.IBQuery;

type
  TMigrarForm = class(TForm)
    AC1: TADOConnection;
    ProcesarButton: TButton;
    O: TADOQuery;
    D: TIBQuery;
    T: TIBQuery;
    ProgressBar1: TProgressBar;
    OpenDialog1: TOpenDialog;
